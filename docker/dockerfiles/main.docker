RUN VSC_DOWNLOAD_URL=https://go.microsoft.com/fwlink/?LinkID=760868 && \
	wget --output-document=/tmp/vscode.deb --tries=3 --continue --no-verbose "${VSC_DOWNLOAD_URL}" && \ 
	apt-get update -qq && \
	apt-get install -y libnotify4 libxkbfile1 libsecret-1-0 libgtk-3-0 libxss1 && \
	dpkg -i /tmp/vscode.deb 

RUN apt update -y -qq &&\
    apt install -y -qq curl tmux iputils-ping net-tools nano &&\
    apt install -y -qq vim vim-pathogen vim-fugitive vim-syntastic &&\
    apt install -y -qq gpicview python-pip meld freecad python-tk &&\
    apt-get clean &&\
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN pip install --no-cache-dir scipy==1.2.0 numpy==1.16.1 scikit-learn==0.20.3 matplotlib==2.2.3 pwlf plyfile protobuf pyhocon
RUN groupdel dialout
COPY entrypoint.sh /entrypoint.sh

ENV CC=/usr/bin/gcc-7 \
    CXX=/usr/bin/g++-7


RUN apt-get -qq update && \
	apt-get install -y -q \
	build-essential \
	# libraries
	libgtkmm-3.0-dev \
	libvtk7-dev \
	libboost-all-dev \
	libbullet-dev \
	libgmp-dev \
	libmpfr-dev \
	# binaries
	python3.6 \
	git \
	glade \
	# utlities
	tmux \
	cmake \
	dirmngr \
        gnupg2 \
        tzdata \
	wget \
        sudo \
        git \
        lsb-release && \
	apt-get clean && \
	rm -rf /var/lib/apt/lists/*

#
# Install CGAL
#

RUN cd /tmp/ && \
	git clone https://github.com/CGAL/cgal.git && \
	cd cgal && \
	mkdir build && \
	cd build && \
	cmake .. && \
	make install clean

	

RUN apt-get update && apt-get install -y --no-install-recommends \
        pkg-config \
        libxau-dev \
        libxdmcp-dev \
        libxcb1-dev \
        libxext-dev \
        libx11-dev && \
    rm -rf /var/lib/apt/lists/*

# Setup timezone

RUN ln -nfs /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo "$TZ" > /etc/timezone && \
    dpkg-reconfigure -f noninteractive tzdata
